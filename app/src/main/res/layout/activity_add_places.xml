<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.AddPlacesActivity"
    android:orientation="vertical"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/addPlaceImageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/image_bg"
            android:adjustViewBounds="true"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/imageStatusText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="Please select image"
            android:textColor="@color/black"
            android:layout_margin="4dp"
            android:gravity="center"/>

        <EditText
            android:id="@+id/placeNameEditText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="22dp"
            android:background="@drawable/search_bg"
            android:inputType="text"
            android:paddingStart="16dp"
            android:hint="Name of place"
            android:textColor="#62878F"/>

        <EditText
            android:id="@+id/placeAddressEditText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/search_bg"
            android:inputType="text"
            android:paddingStart="16dp"
            android:hint="Address of place"
            android:textColor="#62878F"/>

        <EditText
            android:id="@+id/placePriceEditText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/search_bg"
            android:inputType="number"
            android:paddingStart="16dp"
            android:hint="Price to visit"
            android:textColor="#62878F"/>

        <EditText
            android:id="@+id/placeAboutEditText"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:gravity="start|top"
            android:background="@drawable/search_bg"
            android:hint="About places"
            android:imeOptions="actionDone"
            android:importantForAutofill="no"
            android:inputType="textMultiLine"
            android:padding="12dp" />

        <Button
            android:id="@+id/addPlaceButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginVertical="30dp"
            android:text="Add"
            android:fontFamily="@font/roboto"/>

    </LinearLayout>
</ScrollView>